<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="LockedOrientationActivity"
    package="com.jr.notesidea"

    >





    <application
        android:allowBackup="true"

        android:icon="@mipmap/ic_newcolo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_newcolo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-9783550633423906~2549621699" />
        <activity android:name=".view.ui.activities.EditActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".view.ui.activities.NoteDetalleActivity"

            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            />

        <activity android:name=".view.ui.activities.NewNoteActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".view.ui.activities.SplashScreen"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ui.activities.MainActivity"

            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>